<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(RootDir)\Module.targets" />
  <Import Project="Pex.targets" />

  <ItemGroup>
    <CSharpProject Include="MbUnit.Pex\MbUnit.Pex.csproj" />

    <CSharpProject Include="MbUnit.Pex.TestResources\MbUnit.Pex.TestResources.csproj" />
    <CSharpProject Include="MbUnit.Pex.Tests\MbUnit.Pex.Tests.csproj" />
  </ItemGroup>

  <Choose>
    <When Condition="$(PexInstalled)">
      <ItemGroup>
        <Binary Include="MbUnit.Pex\bin\MbUnit.Pex.dll" />
      </ItemGroup>

      <ItemGroup>
        <TestAssembly Include="MbUnit.Pex.Tests\bin\MbUnit.Pex.Tests.dll" />
      </ItemGroup>
    </When>
  </Choose>
</Project>
